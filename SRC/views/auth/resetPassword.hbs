<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <div class="container d-flex flex-direction-row justify-content-center">
                        <p>Forgot password</p>
                    </div>
                    <form action="/forgot" method="post" class="pt-4">
                        <div class="form-group">
                            <input type="text" name="username" class="form-control" placeholder="New password">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Repeat password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>