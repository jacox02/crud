<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <div class="container d-flex flex-direction-column justify-content-center">
                        <h1>Signup</h1>
                    </div>
                    <form action="/signup" method="post" class="pt-4">
                        <div class="form-group">
                            <input type="text" name="fullname" class="form-control" placeholder="Nombre completo"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Clave">
                        </div>
                        <div class="pl-1">
                            <a href="/signin">
                                <h6>Existing user</h6>
                            </a>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>