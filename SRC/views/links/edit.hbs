<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <p class="text-center">Editar links</p>
                    <form action="/links/edit/{{link.id}}" method="post">
                            <div class="form-group">
                                <input value="{{link.tittle}}"type="text" name="tittle" id="" class="form-control" placeholder="Titulo" autofocus> 
                            </div>
                            <div class="form-group">
                                <input value="{{link.url}}"type="url" name="url" id="" class="form-control" placeholder="URL">
                            </div>
                            <div class="form-group">
                                <textarea name="description" rows="2" class="form-control"placeholder="Description">{{link.description}}</textarea>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                     <i class="fas fa-check"></i>
                                </button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>