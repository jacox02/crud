{{#if tasks}}
<div class="container pt-1">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Materia</th>
                <th scope="col">Link</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>
                    {{tittle}}
                </td>

                <td> <a href="{{url}}">{{url}}</a> </td>

                <td>
                    <a href="/links/delete/{{id}}" class="btn btn-danger btn-secondary"><i class="fas fa-trash"></i></a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary"><i class="fas fa-edit"></i></a>
                </td>

            </tr>

            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="alert alert-warning alert-dismissible fade show col-12 text-center" role="alert">
    No hay links agregados <a href="/task/add" class="alert-link">agrega mas links aqui</a>.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}