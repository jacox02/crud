<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="car-header">
                    <div class="text-center">
                        <h1>Agregar tarea</h1>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/tasks/edit/{{tasks.id}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{tasks.tittle}}" name="tittle" id="" class="form-control"
                                placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{tasks.assignment}}" name="assignment" id="" class="form-control"
                                placeholder="Materia" autofocus>
                        </div>
                        <div class="form-group">
                            <span>Fecha de entrega:</span>
                            <input type="text" value=" {{tasks.delivery_date}}" name="delivery_date" id=""
                                class="form-control" placeholder="Dia 14/08/2001" autofocus>
                        </div>


                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description">{{tasks.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                <i class="fas fa-check"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>